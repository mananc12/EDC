{
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "script"
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "tabWidth": 2,
        "semi": false,
        "singleQuote": true,
        "trailingComma": "all",
        "arrowParens": "always",
        "bracketSpacing": true,
        "max_line_length": 120,
        "printWidth": 80,
        "endOfLine": "auto"
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true,
        "optionalDependencies": true,
        "peerDependencies": true
      }
    ],

    "indent": 0,
    "curly": 0,
    "radix": 0,
    "one-var": 0,
    "one-var-declaration-per-line": 0,
    "arrow-body-style": 0,
    "object-curly-newline": 0,
    "comma-dangle": 0,
    "newline-per-chained-call": 0,
    "nonblock-statement-body-position": 0,
    "no-console": 0,
    "no-unused-vars": 0,
    "global-require": 0,
    "import/no-unresolved": 0,
    "function-paren-newline": 0,
    "no-underscore-dangle": 0,
    "operator-linebreak": 0,
    "implicit-arrow-linebreak": 0,
    "no-param-reassign": 0,
    "max-len": 0,
    "no-plusplus": 0,
    "no-restricted-syntax": 0,
    "no-use-before-define": ["error", { "functions": false }]
  }
}
